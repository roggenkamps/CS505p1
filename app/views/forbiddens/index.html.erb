<p id="notice"><%= notice %></p>

<h1>Forbiddens</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Table</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forbiddens.each do |forbidden| %>
      <tr>
        <td><%= forbidden.user %></td>
        <td><%= forbidden.relation %></td>
        <td><%= link_to 'Show', forbidden %></td>
        <td><%= link_to 'Edit', edit_forbidden_path(forbidden) %></td>
        <td><%= link_to 'Destroy', forbidden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

